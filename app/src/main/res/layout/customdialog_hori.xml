<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:gravity="center"
              android:background="#000"
              android:layout_gravity="center"
              android:layout_height="wrap_content">



    <ImageView
            android:id="@+id/closebtn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="#33000000"
            android:elevation="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/author_layout"
                  android:elevation="@dimen/_10sdp"
                  android:layout_marginLeft="@dimen/_10sdp"
                  android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sellerProfilePic"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/com_facebook_profile_picture_blank_square" />

        <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_12ssp"
                android:text="Author name"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.otaliastudios.zoom.ZoomImageView
            android:id="@+id/imgDialog"
            android:layout_marginTop="@dimen/_minus60sdp"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_470sdp"
            app:transformation="centerInside"
            app:transformationGravity="auto"
            app:overScrollHorizontal="true"
            app:overScrollVertical="true"
            app:overPinchable="true"
            app:horizontalPanEnabled="true"
            app:verticalPanEnabled="true"
            app:zoomEnabled="true"
            app:flingEnabled="true"
            app:minZoom="1"
            app:minZoomType="zoom"
            app:maxZoom="3"
            app:maxZoomType="zoom"
            app:animationDuration="280"/>


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content"
                  android:elevation="2dp"
                  android:padding="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_minus50sdp"
                  android:gravity="right">

        <ImageView
                android:id="@+id/mainDwnld"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_26sdp"
                android:padding="@dimen/_4sdp"
                android:layout_margin="3dp"
                android:background="@drawable/bg_border_order_open"
                android:src="@drawable/ic_file_download_black_24dp"
        />
        <ImageView
                android:id="@+id/mainShare"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_26sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/share_bg"
                android:layout_margin="3dp"
                android:src="@drawable/ic_share_black_24dp"/>

    </LinearLayout>

</LinearLayout>