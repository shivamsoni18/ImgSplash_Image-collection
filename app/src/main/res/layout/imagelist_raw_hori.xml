<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/ImageIV"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:elevation="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:elevation="2dp"
                  android:visibility="gone"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:background="#fff">

        <!-- <com.jsibbold.zoomage.ZoomageView
                 android:id="@+id/ImageIV"
                 android:layout_width="match_parent"
                 android:layout_height="384dp"
                 app:zoomage_restrictBounds="false"
                 app:zoomage_animateOnReset="true"
                 app:zoomage_autoResetMode="UNDER"
                 app:zoomage_autoCenter="true"
                 app:zoomage_zoomable="true"
                 app:zoomage_translatable="true"
                 app:zoomage_minScale="0.6"
                 app:zoomage_maxScale="8"
         />-->

        <!-- <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                 android:id="@+id/ImageIV"
                 android:layout_width="match_parent"
                 android:layout_height="384dp"/>-->

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <ImageView
                    android:id="@+id/mainShare"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_7sdp"
                    android:tint="#80FFFFFF"
                    android:elevation="@dimen/_10sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_share_black_24dp"/>


            <LinearLayout android:layout_width="@dimen/_100sdp"
                          android:layout_height="wrap_content"
                          android:id="@+id/author_layout"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:layout_marginRight="@dimen/_10sdp"
                          android:layout_marginTop="@dimen/_minus26sdp"
                          android:elevation="@dimen/_10sdp"
                          android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/sellerProfilePic"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/com_facebook_profile_picture_blank_square"/>

                <TextView
                        android:id="@+id/author_name"
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_10ssp"
                        android:text="Author name"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <ImageView
                    android:id="@+id/ImageIV2"
                    android:scaleType="centerCrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_minus25sdp"
                    android:layout_marginBottom="@dimen/_minus26sdp"/>
            <ImageView
                    android:id="@+id/mainDwnld"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="right"
                    android:padding="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_file_download_black_24dp"/>

            <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:textColor="#CC424242"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="know more about author - "
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/author_url"
                    android:layout_width="wrap_content"
                    android:textColor="#CC283593"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="https://unsplash.com/@alejandroescamilla"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>