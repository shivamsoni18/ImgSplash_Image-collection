<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:elevation="2dp"
                  android:layout_marginBottom="@dimen/_3sdp"
                  android:padding="@dimen/_6sdp"
                  android:background="#fff"
    >
        <!-- <com.jsibbold.zoomage.ZoomageView
                 android:id="@+id/ImageIV"
                 android:layout_width="match_parent"
                 android:layout_height="384dp"
                 app:zoomage_restrictBounds="false"
                 app:zoomage_animateOnReset="true"
                 app:zoomage_autoResetMode="UNDER"
                 app:zoomage_autoCenter="true"
                 app:zoomage_zoomable="true"
                 app:zoomage_translatable="true"
                 app:zoomage_minScale="0.6"
                 app:zoomage_maxScale="8"
         />-->

        <!-- <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                 android:id="@+id/ImageIV"
                 android:layout_width="match_parent"
                 android:layout_height="384dp"/>-->

        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/ImageIV"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:background="#1A000000"
                    android:layout_height="@dimen/_300sdp"/>

            <!--<include
                    android:id="@+id/ic_loader"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    layout="@layout/loader_new"/>-->

        </RelativeLayout>


        <LinearLayout
                android:id="@+id/author_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#4D000000"
                android:layout_marginTop="@dimen/_minus50sdp"
                android:padding="@dimen/_10sdp">


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/sellerProfilePic"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/com_facebook_profile_picture_blank_square" />

                <LinearLayout
                        android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">


                    <TextView
                            android:id="@+id/author_name"
                            android:layout_width="match_parent"
                            android:textColor="#fff"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/_11ssp"
                            android:text="Author name"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/author_address"
                            android:layout_width="@dimen/_140sdp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="#fff"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/_9ssp"
                            android:text="Author name"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:text="know more about author - "
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/author_url"
                    android:layout_width="@dimen/_180sdp"
                    android:textColor="#CC283593"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="https://unsplash.com/@alejandroescamilla"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginRight="@dimen/_6sdp"
                      android:layout_height="wrap_content"
                      android:elevation="2dp"
                      android:layout_marginTop="@dimen/_minus40sdp"
                      android:gravity="right">

            <ImageView
                    android:id="@+id/mainDwnld"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_margin="3dp"
                    android:background="@drawable/bg_border_order_open"
                    android:src="@drawable/ic_file_download_black_24dp"
            />
            <ImageView
                    android:id="@+id/mainShare"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/share_bg"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_share_black_24dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>